{
    "compilerOptions": {
        "module": "esnext",
        "target": "es2015",
        "jsx": "preserve",
        "removeComments": false,
        "moduleResolution": "node",
        "forceConsistentCasingInFileNames": true,
        "strict": true,
        "noEmit": false,
        "experimentalDecorators": true,
        "baseUrl": "./",
        "allowSyntheticDefaultImports": true,
        "noErrorTruncation": true,
        "allowJs": true,
        "declaration": true,
        "resolveJsonModule": true,
        "skipLibCheck": true,
        "noUnusedLocals": true,
        "noImplicitAny": false,
        "noUnusedParameters": true,
        "paths": {
            "@xy-form/ds-bootstrap": [
                "ds-bootstrap/src"
            ],
            "@xy-form/ds-bootstrap/*": [
                "ds-bootstrap/src/*"
            ],
            "@xy-form/ds-material": [
                "ds-material/src"
            ],
            "@xy-form/ds-material/*": [
                "ds-material/src/*"
            ],
            "@xy-form/kit-dnd": [
                "kit-dnd/src"
            ],
            "@xy-form/kit-dnd/*": [
                "kit-dnd/src/*"
            ],
            "@xy-form/material-pickers": [
                "material-pickers/src"
            ],
            "@xy-form/material-pickers/*": [
                "material-pickers/src/*"
            ],
            "@xy-form/material-slate": [
                "material-slate/src"
            ],
            "@xy-form/material-slate/*": [
                "material-slate/src/*"
            ],
            "@xy-form/material-editorjs": [
                "material-editorjs/src"
            ],
            "@xy-form/material-editorjs/*": [
                "material-editorjs/src/*"
            ],
            "@xy-form/material-dnd": [
                "material-dnd/src"
            ],
            "@xy-form/material-dnd/*": [
                "material-dnd/src/*"
            ],
            "@xy-form/ui-schema": [
                "ui-schema/src"
            ],
            "@xy-form/ui-schema/*": [
                "ui-schema/src/*"
            ],
            "@xy-form/pro": [
                "ui-schema-pro/src"
            ],
            "@xy-form/pro/*": [
                "ui-schema-pro/src/*"
            ],
            "@xy-form/dictionary": [
                "dictionary/src"
            ],
            "@xy-form/dictionary/*": [
                "dictionary/src/*"
            ]
        }
    },
    "exclude": [
        "**/build/",
        "**/node_modules/"
    ]
}
