{
    "compilerOptions": {
        "module": "esnext",
        "target": "es2015",
        "jsx": "preserve",
        "removeComments": false,
        "moduleResolution": "node",
        "forceConsistentCasingInFileNames": true,
        "strict": true,
        "noEmit": false,
        "experimentalDecorators": true,
        "baseUrl": "./",
        "allowSyntheticDefaultImports": true,
        "noErrorTruncation": true,
        "allowJs": true,
        "declaration": true,
        "resolveJsonModule": true,
        "skipLibCheck": true,
        "paths": {
            "@ui-schema/ds-bootstrap": [
                "ds-bootstrap/src"
            ],
            "@ui-schema/ds-bootstrap/*": [
                "ds-bootstrap/src/*"
            ],
            "@ui-schema/ds-material": [
                "ds-material/src"
            ],
            "@ui-schema/ds-material/*": [
                "ds-material/src/*"
            ],
            "@ui-schema/material-code": [
                "material-code/src"
            ],
            "@ui-schema/material-code/*": [
                "material-code/src/*"
            ],
            "@ui-schema/material-color": [
                "material-color/src"
            ],
            "@ui-schema/material-color/*": [
                "material-color/src/*"
            ],
            "@ui-schema/material-pickers": [
                "material-pickers/src"
            ],
            "@ui-schema/material-pickers/*": [
                "material-pickers/src/*"
            ],
            "@ui-schema/material-richtext": [
                "material-richtext/src"
            ],
            "@ui-schema/material-richtext/*": [
                "material-richtext/src/*"
            ],
            "@ui-schema/ui-schema": [
                "ui-schema/src"
            ],
            "@ui-schema/ui-schema/*": [
                "ui-schema/src/*"
            ]
        }
    },
    "exclude": [
        "**/build/",
        "**/node_modules/"
    ]
}
